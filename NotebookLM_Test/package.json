{
  "name": "notebooklm-booth",
  "main": "electron/main.cjs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env NODE_ENV=development vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vue-tsc && vite build && electron-builder"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/app": "^6.0.3",
    "@capacitor/browser": "^6.0.6",
    "@capacitor/core": "^6.2.1",
    "cordova-plugin-inappbrowser": "^6.0.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vue-tsc": "^3.1.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.notebooklm.app",
    "productName": "NotebookLM App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  }
}
